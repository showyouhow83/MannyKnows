---
// Import the Layout component
import BaseLayout from '../layouts/BaseLayout.astro';
import MarqueeSimple from '../components/MarqueeSimple.astro';
---

<BaseLayout title="MannyKnows - Business Solutions & Services">
	<main class="relative bg-dark-primary text-white min-h-screen">
		<!-- Background Gradient -->
		<div class="absolute inset-0 bg-gradient-to-br from-dark-primary via-dark-secondary to-dark-tertiary bg-300 animate-gradient-shift -z-10"></div>

		<!-- Marquee Announcement Section -->
		<MarqueeSimple />

		<!-- Navigation -->
		<nav id="topNav" class="bg-transparent min-h-[7.75rem] relative">
			<!-- Navigation border -->
			<div class="absolute bottom-0 left-0 right-0 h-px bg-gradient-to-r from-primary-blue via-primary-pink to-primary-blue bg-200 animate-simple-gradient-flow"></div>
			
			<div class="max-w-[1440px] mx-auto px-8">
				<div class="flex justify-between items-center w-full py-4">
					<!-- Logo -->
					<h1 class="text-5xl font-black m-0">
						<a href="/" class="logo-gradient text-white font-black transition-all duration-500 hover:-translate-y-1 hover:scale-105 no-underline relative">MK</a>
					</h1>

					<!-- Navigation Menu -->
					<ul class="flex list-none gap-8 m-0 p-0 flex-1 justify-center ml-8">
						<li><a href="#services" class="nav-gradient text-white font-medium transition-all duration-500 hover:-translate-y-1 no-underline relative">Services</a></li>
						<li><a href="/process" class="nav-gradient text-white font-medium transition-all duration-500 hover:-translate-y-1 no-underline relative">Process</a></li>
						<li><a href="/blog" class="nav-gradient text-white font-medium transition-all duration-500 hover:-translate-y-1 no-underline relative">Blog</a></li>
