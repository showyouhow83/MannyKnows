---
import ServiceCard from '../ui/ServiceCard.astro';
import Section from '../layout/Section.astro';
import Container from '../layout/Container.astro';
import SectionHeader from '../ui/SectionHeader.astro';

// Service data configuration
const services = [
  {
    title: "AI-Powered Websites & Apps",
    description: "Smart digital experiences that adapt to each user with personalized content and dynamic recommendations. Boost engagement by 40% with real-time optimization and intelligent behavior tracking.",
    icon: `<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2">
      <rect x="2" y="3" width="20" height="14" rx="2" ry="2"/>
      <line x1="8" y1="21" x2="16" y2="21"/>
      <line x1="12" y1="17" x2="12" y2="21"/>
    </svg>`,
    tags: "Personalization • A/B Testing • Conversion Optimization",
    variant: "indigo" as const,
    pixelColors: "#6366f1, #3b82f6, #4f46e5"
  },
  {
    title: "Business Process Automation",
    description: "Streamline your operations with intelligent automation—from workflows to data processing. Save 10+ hours per week while eliminating 95% of manual errors and boosting your team's productivity.",
    icon: `<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2">
      <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"/>
      <polyline points="7.5,4.21 12,6.81 16.5,4.21"/>
      <polyline points="7.5,19.79 7.5,14.6 3,12"/>
      <polyline points="21,12 16.5,14.6 16.5,19.79"/>
      <polyline points="3.27,6.96 12,12.01 20.73,6.96"/>
      <line x1="12" y1="22.08" x2="12" y2="12"/>
    </svg>`,
    tags: "Workflow Automation • Data Processing • Team Productivity",
    variant: "green" as const,
    pixelColors: "#22c55e, #10b981, #16a34a"
  },
  {
    title: "AI Chatbots & Virtual Assistants",
    description: "24/7 intelligent assistants that understand your business and customers. Reduce support costs by 60% while improving satisfaction scores and freeing your team for high-value work.",
    icon: `<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2">
      <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
      <circle cx="12" cy="7" r="4"/>
      <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
      <path d="M8 3.13a4 4 0 0 0 0 7.75"/>
    </svg>`,
    tags: "Customer Support • Lead Qualification • Knowledge Base",
    variant: "blue" as const,
    pixelColors: "#3b82f6, #06b6d4, #2563eb"
  },
  {
    title: "AI Analytics & Insights",
    description: "Transform your data into actionable insights with predictive analytics that forecast trends and behavior. Make data-driven decisions 70% faster with intelligent dashboards and automated reporting.",
    icon: `<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2">
      <line x1="18" y1="20" x2="18" y2="10"/>
      <line x1="12" y1="20" x2="12" y2="4"/>
      <line x1="6" y1="20" x2="6" y2="14"/>
    </svg>`,
    tags: "Predictive Analytics • Business Intelligence • Automated Reports",
    variant: "orange" as const,
    pixelColors: "#f97316, #eab308, #ea580c"
  },
  {
    title: "AI Content Creation",
    description: "Generate compelling copy, marketing materials, and social media content that resonates with your audience. Scale your content production 10x faster with AI that matches your brand voice.",
    icon: `<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2">
      <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
      <polyline points="14,2 14,8 20,8"/>
      <line x1="16" y1="13" x2="8" y2="13"/>
      <line x1="16" y1="17" x2="8" y2="17"/>
      <polyline points="10,9 9,9 8,9"/>
    </svg>`,
    tags: "Copywriting • Marketing Materials • Social Media Content",
    variant: "purple" as const,
    pixelColors: "#a855f7, #ec4899, #9333ea"
  },
  {
    title: "AI Strategy & Training",
    description: "Comprehensive AI strategy development and hands-on training to transform your team into AI power users. Accelerate adoption with customized workshops and ongoing support for maximum ROI.",
    icon: `<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2">
      <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
      <circle cx="12" cy="7" r="4"/>
    </svg>`,
    tags: "AI Roadmaps • Team Training • Implementation Support",
    variant: "teal" as const,
    pixelColors: "#14b8a6, #06b6d4, #0d9488"
  },
  {
    title: "Creative & Visual AI",
    description: "AI-powered design, image generation, and visual content creation that brings your ideas to life. From brand assets to marketing visuals, create stunning content that captures attention and builds trust.",
    icon: `<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2">
      <path d="M23 19a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h4l2-3h6l2 3h4a2 2 0 0 1 2 2z"/>
      <circle cx="12" cy="13" r="4"/>
    </svg>`,
    tags: "Image Generation • Brand Assets • Visual Content",
    variant: "rose" as const,
    pixelColors: "#f43f5e, #ec4899, #e11d48"
  }
];
---

<Section id="services" variant="default" hasOverflow={true}>
  <Container className="relative z-10">
    <SectionHeader
      badge="What We Offer"
      title="Artificial Intelligence"
      subtitle="Business Growing Services"
    />

    <!-- Main AI Services Grid -->
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 mx-auto mb-16">
      {services.map((service) => (
        <ServiceCard {...service} />
      ))}

      <!-- Custom AI Solutions Card -->
      <div class="lg:col-span-2 flex items-center">
        <div>
          <p class="apple-gradient-text sf-medium apple-body-text text-xl md:text-2xl lg:text-3xl text-text-light-secondary dark:text-text-dark-secondary leading-7 mb-8" data-colorful-title>
            We specialize in custom AI solutions, intelligent automation, and process optimization that transforms how businesses operate and compete.
          </p>
          <ul class="list-none p-0 mb-8 space-y-4">
            {[
              "Boost productivity by 10x",
              "Reduce operational costs",
              "Scale with confidence",
              "Custom AI & API integrations"
            ].map((benefit) => (
              <li class="flex items-center gap-3 text-text-light-primary dark:text-text-dark-primary text-lg">
                <svg class="w-5 h-5 text-green-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                {benefit}
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>
  </Container>
</Section>

<style>
  /* Services responsive styles */
  @media (max-width: 768px) {
    .services-grid {
      @apply grid-cols-1 gap-6;
    }
  }
</style>
