---
// ProcessSectionAlt.astro - AI Transformation Process (3 Steps Horizontal)
// SLPainting layout with MannyKnows styling
import Section from '../layout/Section.astro';
import Container from '../layout/Container.astro';
import SectionHeader from '../ui/SectionHeader.astro';

export interface Props {
  className?: string;
}

const { className = '' } = Astro.props;

const processSteps = [
  {
    number: "1",
    title: "Discovery & Strategy",
    description: "We analyze your business goals, current systems, and identify AI opportunities to maximize your growth potential."
  },
  {
    number: "2",
    title: "Build & Implement",
    description: "We develop custom AI solutions tailored to your needsâ€”from automation to intelligent assistants and analytics."
  },
  {
    number: "3",
    title: "Launch & Scale",
    description: "We deploy your AI solution, monitor performance, and provide ongoing support to help you scale confidently."
  }
];
---

<Section id="process" variant="default" hasOverflow={true} className={className}>
  <Container className="relative z-10">
    <SectionHeader
      badge="How It Works"
      title="Our Process"
      subtitle="From discovery to deployment we follow a proven methodology to transform your AI vision into reality"
    />

    <!-- Horizontal 3-Step Process (SLPainting Layout) -->
    <div class="steps-grid grid grid-cols-1 md:grid-cols-3 gap-12 lg:gap-24 max-w-6xl mx-auto">
      {processSteps.map((step, index) => (
        <div class="step-item group relative flex flex-col items-center text-center" data-step={index}>
          <!-- Step Number with Info Icon -->
          <div class="relative">
            <div class="step-number" aria-hidden="true">
              {step.number}
            </div>
            <!-- Hover Hint Icon -->
            <div class="hover-hint">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="12" cy="12" r="10"></circle>
                <path d="M12 16v-4"></path>
                <path d="M12 8h.01"></path>
              </svg>
            </div>
          </div>

          <!-- Step Title -->
          <h3 class="step-title">{step.title}</h3>

          <!-- Step Description (shown on hover as overlay) -->
          <div class="step-description-overlay">
            <p class="text-sm lg:text-base text-text-light-secondary dark:text-white/80 leading-relaxed">
              {step.description}
            </p>
          </div>
        </div>
      ))}
    </div>
  </Container>
</Section>

<style>
  /* Step Grid Layout */
  .steps-grid {
    margin-top: -2rem;
  }

  /* Step item styling */
  .step-item {
    min-height: 280px;
    padding: 1rem;
    position: relative;
  }

  /* Number styling - Apple-style gradient animation */
  .step-number {
    position: relative;
    font-size: 180px;
    font-weight: 900;
    line-height: 0.8;
    margin: 0;

    /* MK gradient: blue to pink (no light blue) */
    background: linear-gradient(90deg, #0071e3, #ff4faa);
    background-size: 400% 100%;
    animation: numberGradientFlow 35s ease-in-out infinite;

    /* Gradient text */
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;

    transition: opacity 0.3s ease, transform 0.3s ease;
  }

  @keyframes numberGradientFlow {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  /* Step title styling - white text */
  .step-title {
    font-size: 1.25rem;
    font-weight: 700;
    margin-top: 1.5rem;
    position: relative;
    z-index: 1;
    max-width: 220px;
    line-height: 1.3;
    color: #1f2937;
    transition: opacity 0.3s ease, transform 0.3s ease;
  }

  :global(.dark) .step-title {
    color: #ffffff;
  }

  /* Hover hint icon */
  .hover-hint {
    position: absolute;
    top: -8px;
    right: -24px;
    color: #5856d6;
    opacity: 0.6;
    transition: opacity 0.3s ease;
  }

  /* Desktop step description - glassmorphism overlay */
  .step-description-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 1.5rem;
    /* Transparent with blur */
    background: rgba(255, 255, 255, 0.6);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border-radius: 1rem;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    border: 1px solid rgba(209, 213, 219, 0.3);
    opacity: 0;
    transform: translateY(10px);
    pointer-events: none;
    transition: opacity 0.3s ease, transform 0.3s ease;
    z-index: 10;
  }

  /* Dark mode glassmorphism */
  :global(.dark) .step-description-overlay {
    background: rgba(17, 24, 39, 0.6);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  /* Hover effects - keep number visible, blur handles it */
  .step-item:hover .step-title {
    opacity: 0;
    transform: translateY(-10px);
  }

  .step-item:hover .hover-hint {
    opacity: 0;
  }

  .step-item:hover .step-description-overlay {
    opacity: 1;
    transform: translateY(0);
    pointer-events: auto;
  }

  /* Responsive adjustments */
  @media (min-width: 768px) {
    .step-number {
      font-size: 200px;
      line-height: 1;
    }

    .step-title {
      font-size: 1.5rem;
      margin-top: 2rem;
    }
  }

  /* Mobile: Show descriptions below, no hover effect */
  @media (max-width: 767px) {
    .hover-hint {
      display: none;
    }

    .step-item {
      min-height: auto;
      padding-bottom: 2rem;
    }

    .step-number {
      font-size: 140px;
    }

    .step-item:hover .step-number,
    .step-item:hover .step-title {
      opacity: 1;
      transform: none;
    }

    .step-description-overlay {
      position: relative;
      opacity: 1;
      transform: none;
      pointer-events: auto;
      background: transparent;
      box-shadow: none;
      border: none;
      padding: 1rem 0;
      margin-top: 0.5rem;
    }
  }

  /* Entrance animation */
  .step-item {
    opacity: 0;
    transform: translateY(20px);
    animation: stepFadeIn 0.6s ease forwards;
  }

  .step-item:nth-child(1) { animation-delay: 0.1s; }
  .step-item:nth-child(2) { animation-delay: 0.2s; }
  .step-item:nth-child(3) { animation-delay: 0.3s; }

  @keyframes stepFadeIn {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
