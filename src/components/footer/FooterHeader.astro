---
// Footer Header Component - Brand, Social Links, Blog Articles, and Newsletter
import BlogArticleCard from './BlogArticleCard.astro';

interface Props {
  brandTitle?: string;
  brandDescription?: string;
  socialLinks?: {
    linkedin?: string;
    youtube?: string;
    tiktok?: string;
  };
}

const { 
  brandTitle = "MK",
  brandDescription = "Professional AI-powered business solutions. From intelligent automation to data-driven insights, helping businesses grow smarter and faster.",
  socialLinks = {
    linkedin: "#",
    youtube: "#",
    tiktok: "#"
  }
} = Astro.props;

// Blog articles data - could be passed as props or fetched from CMS
const blogArticles = [
  {
    icon: "chat" as const,
    category: "Chatbots & AI",
    title: "How AI Chatbots Transform Customer Service",
    categoryColor: "blue" as const,
    href: "#"
  },
  {
    icon: "document" as const,
    category: "Content Creation", 
    title: "AI Content Creation: The Future of Marketing",
    categoryColor: "purple" as const,
    href: "#"
  },
  {
    icon: "analytics" as const,
    category: "Data Analytics",
    title: "Predictive Analytics: Making Data-Driven Decisions", 
    categoryColor: "orange" as const,
    href: "#"
  }
];
---

<div class="max-w-[1440px] mx-auto pt-[4.5rem] pb-0">
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    
    <!-- Column 1: Brand & Social (1 column = 33%) -->
    <div id="about" class="lg:col-span-1 space-y-8 px-4 lg:px-6">
      <!-- Brand Section -->
      <div class="text-left">
        <h3 class="text-6xl font-black text-gray-800 dark:text-white mb-6 transition-colors duration-300">
          <span class="apple-gradient-text bg-gradient-to-r from-primary-blue via-purple-500 to-primary-pink bg-clip-text text-transparent animate-button-gradient">
            {brandTitle}
          </span>
        </h3>
        <p class="text-gray-700 dark:text-white/80 leading-relaxed text-sm mb-8 transition-colors duration-300">
          {brandDescription}
        </p>
      </div>
      
      <!-- Social Links -->
      <div>
        <h6 class="apple-gradient-text text-gray-800 dark:text-white/90 font-medium mb-4 text-center transition-colors duration-300">Follow Us</h6>
        <div class="flex gap-3 justify-center">
          <!-- LinkedIn -->
          <a href={socialLinks.linkedin} class="group w-10 h-10 bg-gray-300/50 dark:bg-white/10 rounded-xl flex items-center justify-center text-gray-700 dark:text-gray-300 hover:bg-[#0077B5] hover:text-white dark:hover:text-white transition-all duration-500 hover:scale-110 hover:-translate-y-1 relative overflow-hidden before:content-[''] before:absolute before:inset-0 before:bg-gradient-to-r before:from-transparent before:via-white/6 before:to-transparent before:-translate-x-full before:animate-subtle-shimmer hover:shadow-lg hover:shadow-[#0077B5]/50">
            <svg width="18" height="18" fill="currentColor" viewBox="0 0 24 24" class="group-hover:scale-110 transition-transform duration-300 relative z-10">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"></path>
            </svg>
          </a>
          
          <!-- YouTube -->
          <a href={socialLinks.youtube} class="group w-10 h-10 bg-gray-300/50 dark:bg-white/10 rounded-xl flex items-center justify-center text-gray-700 dark:text-gray-300 hover:bg-[#FF0000] hover:text-white dark:hover:text-white transition-all duration-500 hover:scale-110 hover:-translate-y-1 relative overflow-hidden before:content-[''] before:absolute before:inset-0 before:bg-gradient-to-r before:from-transparent before:via-white/6 before:to-transparent before:-translate-x-full before:animate-subtle-shimmer hover:shadow-lg hover:shadow-[#FF0000]/50">
            <svg width="18" height="18" fill="currentColor" viewBox="0 0 24 24" class="group-hover:scale-110 transition-transform duration-300 relative z-10">
              <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"></path>
            </svg>
          </a>
          
          <!-- TikTok -->
          <a href={socialLinks.tiktok} class="group w-10 h-10 bg-gray-300/50 dark:bg-white/10 rounded-xl flex items-center justify-center text-gray-700 dark:text-gray-300 hover:bg-[#000000] hover:text-white dark:hover:text-white transition-all duration-500 hover:scale-110 hover:-translate-y-1 relative overflow-hidden before:content-[''] before:absolute before:inset-0 before:bg-gradient-to-r before:from-transparent before:via-white/6 before:to-transparent before:-translate-x-full before:animate-subtle-shimmer hover:shadow-lg hover:shadow-black/50">
            <svg width="18" height="18" fill="currentColor" viewBox="0 0 24 24" class="group-hover:scale-110 transition-transform duration-300 relative z-10">
              <path d="M12.525.02c1.31-.02 2.61-.01 3.91-.02.08 1.53.63 3.09 1.75 4.17 1.12 1.11 2.7 1.62 4.24 1.79v4.03c-1.44-.05-2.89-.35-4.2-.97-.57-.26-1.1-.59-1.62-.93-.01 2.92.01 5.84-.02 8.75-.08 1.4-.54 2.79-1.35 3.94-1.31 1.92-3.58 3.17-5.91 3.21-1.43.08-2.86-.31-4.08-1.03-2.02-1.19-3.44-3.37-3.65-5.71-.02-.5-.03-1-.01-1.49.18-1.9 1.12-3.72 2.58-4.96 1.66-1.44 3.98-2.13 6.15-1.72.02 1.48-.04 2.96-.04 4.44-.99-.32-2.15-.23-3.02.37-.63.41-1.11 1.04-1.36 1.75-.21.51-.15 1.07-.14 1.61.24 1.64 1.82 3.02 3.5 2.87 1.12-.01 2.19-.66 2.77-1.61.19-.33.4-.67.41-1.06.1-1.79.06-3.57.07-5.36.01-4.03-.01-8.05.02-12.07z"></path>
            </svg>
          </a>
        </div>
      </div>
      <div>
          <!-- Newsletter Signup -->
        <div class="bg-gradient-to-br from-blue-100/80 via-purple-100/60 to-pink-100/80 dark:from-primary-blue/10 dark:via-primary-pink/5 dark:to-primary-blue/10 rounded-xl p-4 backdrop-blur-sm border border-blue-300/30 dark:border-white/10 transition-colors duration-300">
          <h4 class="apple-gradient-text text-lg font-bold text-gray-800 dark:text-white mb-2 transition-colors duration-300">
            AI Insights
          </h4>
          <p class="text-gray-700 dark:text-white/80 text-xs mb-4 leading-relaxed transition-colors duration-300">
            Get exclusive tips and trends delivered to your inbox.
          </p>
          <form class="space-y-3" data-np-autofill-form-type="subscribe" data-np-checked="1" data-np-watching="1">
            <input 
              type="email" 
              placeholder="Your email" 
              class="w-full px-3 py-2 bg-white/80 dark:bg-white/10 border border-gray-300/50 dark:border-white/20 rounded-lg text-gray-800 dark:text-white placeholder-gray-600 dark:placeholder-white/60 focus:outline-none focus:ring-2 focus:ring-primary-blue/50 focus:border-primary-blue/50 transition-all duration-300 text-sm" 
              required 
              data-np-autofill-field-type="email"
            />
            <button 
              type="submit" 
              class="w-full px-4 py-2 bg-gradient-to-r from-primary-blue via-purple-500 to-primary-pink text-white font-medium rounded-lg hover:from-primary-blue/80 hover:to-primary-pink/80 transition-all duration-300 transform hover:scale-105 text-sm animate-button-gradient"
            >
              Subscribe
            </button>
            <div class="flex items-center gap-2 text-xs text-gray-600 dark:text-white/60 transition-colors duration-300">
              <svg width="10" height="10" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M9 12l2 2 4-4"></path>
                <circle cx="12" cy="12" r="9"></circle>
              </svg>
              No spam. Unsubscribe anytime.
            </div>
          </form>
        </div>
      </div>
    </div>

    <!-- Column 2: Latest AI Insights Blog Articles (1 column = 33%) -->
    <div class="lg:col-span-1 space-y-6 px-4 lg:px-6">
      <div>
        <h4 class="apple-gradient-text text-2xl font-bold text-gray-800 dark:text-white mb-6 text-left transition-colors duration-300" data-colorful-title="">Latest AI Insights</h4>
        
        <div class="space-y-6">
          {blogArticles.map((article) => (
            <BlogArticleCard {...article} />
          ))}
        </div>
      </div>
    </div>

    <!-- Column 3: Newsletter Signup (1 column = 33%) -->
    <div class="lg:col-span-1 space-y-6 px-4 lg:px-6">
      
    </div>
  </div>
</div>
