  // Real-time validation function
  function setupRealTimeValidation() {
    const fields = [
      {
        input: document.getElementById('contactName') as HTMLInputElement,
        validation: document.getElementById('contactNameValidation'),
        minLength: 2,
        type: 'text'
      },
      {
        input: document.getElementById('contactEmail') as HTMLInputElement,
        validation: document.getElementById('contactEmailValidation'),
        minLength: 0,
        type: 'email'
      },
      {
        input: document.getElementById('contactSubject') as HTMLInputElement,
        validation: document.getElementById('contactSubjectValidation'),
        minLength: 5,
        type: 'text'
      },
      {
        input: document.getElementById('contactMessage') as HTMLTextAreaElement,
        validation: document.getElementById('contactMessageValidation'),
        minLength: 20,
        type: 'text'
      },
      {
        input: document.getElementById('newsletterEmail') as HTMLInputElement,
        validation: document.getElementById('newsletterEmailValidation'),
        minLength: 0,
        type: 'email'
      }
    ];

    fields.forEach(field => {
      if (!field.input || !field.validation) return;

      // Show validation on focus
      field.input.addEventListener('focus', () => {
        field.validation!.classList.remove('opacity-0');
        field.validation!.classList.add('opacity-100');
        validateField(field);
      });

      // Hide validation on blur
      field.input.addEventListener('blur', () => {
        field.validation!.classList.remove('opacity-100');
        field.validation!.classList.add('opacity-0');
        // Reset field styling to default
        field.input.classList.remove('field-valid', 'field-invalid');
      });

      // Real-time validation on input
      field.input.addEventListener('input', () => {
        if (field.validation!.classList.contains('opacity-100')) {
          validateField(field);
        }
      });
    });

    function validateField(field: any) {
      const value = field.input.value;
      const isValid = field.type === 'email' 
        ? validateEmail(value)
        : value.length >= field.minLength;

      const validationDiv = field.validation;
      const validationText = validationDiv.querySelector('.validation-text');
      const characterCount = validationDiv.querySelector('.character-count');

      // Update styling
      field.input.classList.remove('field-valid', 'field-invalid');
      validationDiv.classList.remove('validation-valid', 'validation-invalid');

      if (value.length > 0) {
        if (isValid) {
          field.input.classList.add('field-valid');
          validationDiv.classList.add('validation-valid');
          if (field.type === 'email') {
            validationText.textContent = '✓ Valid email address';
          } else {
            validationText.textContent = `✓ ${field.minLength}+ characters required`;
          }
        } else {
          field.input.classList.add('field-invalid');
          validationDiv.classList.add('validation-invalid');
          if (field.type === 'email') {
            validationText.textContent = '✗ Please enter a valid email address';
          } else {
            validationText.textContent = `✗ Minimum ${field.minLength} characters required`;
          }
        }
      } else {
        // Reset to neutral state when empty
        if (field.type === 'email') {
          validationText.textContent = 'Please enter a valid email address';
        } else {
          validationText.textContent = `Minimum ${field.minLength} characters required`;
        }
      }

      // Update character count for fields that have it
      if (characterCount && field.type !== 'email') {
        const maxLength = field.input.getAttribute('maxlength') || '∞';
        characterCount.textContent = `(${value.length}/${maxLength})`;
      }
    }

    function validateEmail(email: string): boolean {
      const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      return emailRegex.test(email);
    }
  }
