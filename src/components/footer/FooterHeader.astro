        const result = await response.json();
        
        if (response.ok) {
          showNewsletterSuccess(result.message || 'Thank you for subscribing! Check your email for confirmation.');
          newsletterForm.reset();
          
          // Get new CSRF token for next submission
          try {
            const newTokenResponse = await fetch('/api/newsletter');
            if (newTokenResponse.ok) {
              const newTokenData = await newTokenResponse.json();
              newsletterCsrfToken = newTokenData.csrf_token;
              newsletterSessionId = newTokenData.session_id;
